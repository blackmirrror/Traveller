<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Traveller" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/deep_blue_500</item>
        <item name="colorOnPrimary">@color/grey_700</item>
        <item name="colorPrimaryContainer">@color/black</item>
        <item name="colorOnPrimaryContainer">@color/deep_blue_500</item>
        <item name="colorOnSecondaryContainer">@color/deep_blue_300</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/color_gray</item>
        <item name="colorSecondaryContainer">@color/support_overlay</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorError">@color/red_700</item>
        <item name="colorOnError">@color/white</item>
        <item name="backgroundColor">@color/black</item>
    </style>
</resources>