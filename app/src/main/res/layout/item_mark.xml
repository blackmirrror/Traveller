<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="12dp"
    android:paddingHorizontal="16dp"
    android:layout_marginTop="8dp"
    android:background="@drawable/background_edit_text">

    <TextView
        android:id="@+id/tv_mark_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="?attr/colorPrimary"
        tools:text="Mark name"/>

    <TextView
        android:id="@+id/tv_mark_author_and_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="?attr/colorSecondary"
        app:layout_constraintTop_toBottomOf="@id/tv_mark_name"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="8 Likes, author"/>

    <ImageButton
        android:id="@+id/item_favorite_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:foregroundGravity="top"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_favorite"
        app:layout_constraintTop_toTopOf="@id/tv_mark_name"
        app:layout_constraintEnd_toStartOf="@id/item_info_btn" />

    <ImageButton
        android:id="@+id/item_info_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:foregroundGravity="top"
        android:backgroundTint="@color/transparent"
        android:src="@drawable/ic_info"
        app:layout_constraintTop_toTopOf="@id/tv_mark_name"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_mark_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tv_mark_author_and_likes"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Sescriorfk s;pf"/>

</androidx.constraintlayout.widget.ConstraintLayout>